rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Each user can only read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profiles - users can read/write their own profile
    // Admins can read all profiles (for admin dashboard)
    match /userProfiles/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == profileId;
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Feedback - any logged-in user can submit, admins can read/update all
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null &&
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
